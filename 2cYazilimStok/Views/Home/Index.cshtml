@model IEnumerable<Entity.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Stok Durumu</h2>

<h4 class="text-success">
    @if (ViewBag.Success != null)
    {
        @ViewBag.Success
    }
</h4>

<p>
    @Html.ActionLink("Yeni Kayıt", "Insert")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImagePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreateDate)
    </td>
    <td>
        <img src="../@item.ImagePath" height="50" width="50" />
    </td>
    <td>
        @Html.ActionLink("Düzenle", "Update", new { id = item.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
